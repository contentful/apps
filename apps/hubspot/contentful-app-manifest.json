{
  "name": "Hubspot",
  "description": "Sync your Contentful content with Hubspot",
  "id": "hubspot",
  "category": "Marketing",
  "version": "0.1.0",
  "locations": [
    {
      "location": "app-config",
      "component": "ConfigScreen"
    },
    {
      "location": "entry-sidebar",
      "component": "Sidebar"
    },
    {
      "location": "entry-field",
      "component": "Field"
    },
    {
      "location": "dialog",
      "component": "FieldSelectDialog"
    },
    {
      "location": "page",
      "component": "FieldMappingScreen"
    }
  ],
  "parameters": {
    "installation": [
      {
        "id": "hubspotApiKey",
        "name": "Hubspot API Key",
        "description": "Your Hubspot API key from private app",
        "type": "Symbol",
        "required": true
      }
    ]
  },
  "functions": [
    {
      "id": "hubspotEmailFunction",
      "name": "Hubspot Email Function",
      "description": "Sync Contentful Entries to HubSpot Emails",
      "path": "functions/hubspotEmail.js",
      "entryFile": "functions/hubspotEmail.ts",
      "allowNetworks": [
        "api.hubapi.com"
      ],
      "accepts": [
        "appaction.call"
      ]
    }
  ]
}