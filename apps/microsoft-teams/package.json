{
  "name": "@contentful/microsoft-teams",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "create-app-definition": "contentful-app-scripts create-app-definition",
    "build": "rimraf ./build && npm run build-frontend && npm run build-app-actions",
    "build-app-actions": "cd app-actions && npm ci && cd .. && node build-actions.js",
    "build-frontend": "cd frontend && npm ci --include=dev && BUILD_PATH=../build npm run build",
    "build:dev": "rimraf ./build && npm run build-frontend && npm run build-app-actions:dev",
    "build-app-actions:dev": "cd app-actions && npm ci && cd .. && NODE_ENV=development node build-actions.js",
    "deploy": "contentful-app-scripts upload --ci --bundle-dir ./build --organization-id ${DEFINITIONS_ORG_ID} --definition-id 7lcE2IF8TiXXKiMj2UGM8k --token ${CONTENTFUL_CMA_TOKEN}",
    "deploy:test": "contentful-app-scripts upload --ci --bundle-dir ./build --organization-id ${DEV_TESTING_ORG_ID} --definition-id 73UaKZLqfCJTTqayKn73Rv --token ${TEST_CMA_TOKEN}",
    "deploy:sandbox": "contentful-app-scripts upload --ci --bundle-dir ./build --organization-id ${DEV_TESTING_ORG_ID} --definition-id 1qjevmbpYM840jFygQREbD --token ${TEST_CMA_TOKEN}",
    "call-app-action": "npx ts-node scripts/call-app-action.ts",
    "convert-paramet ers": "npx ts-node scripts/convert-parameters.ts",
    "upload": "contentful-app-scripts upload --bundle-dir ./build"
  },
  "dependencies": {
    "@contentful/app-scripts": "^1.31.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.23.0"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "contentful-management": "^11.57.1",
    "ts-node": "^10.9.1"
  }
}
