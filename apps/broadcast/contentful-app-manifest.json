{
  "locations": [
    {
      "location": "app-config",
      "component": "ConfigScreen"
    },
    {
      "location": "entry-sidebar",
      "component": "Sidebar"
    },
    {
      "location": "page",
      "component": "Page"
    }
  ],
  "parameters": {
    "installation": [
      {
        "id": "elevenLabsApiKey",
        "type": "Secret",
        "name": "ElevenLabs API key",
        "description": "API key for the app to use the ElevenLabs API."
      },
      {
        "id": "voiceId",
        "type": "Symbol",
        "name": "Voice ID",
        "description": "Default ElevenLabs voice ID used when generating audio."
      },
      {
        "id": "generateAudioActionId",
        "type": "Symbol",
        "name": "Generate Audio action ID",
        "description": "Optional app action ID to override the auto-resolved Generate Audio action."
      },
      {
        "id": "useMockAi",
        "type": "Boolean",
        "name": "Use mock audio generator",
        "description": "Enable mock audio generation for local testing."
      },
      {
        "id": "waveformColor",
        "type": "Symbol",
        "name": "Waveform color",
        "description": "Color used for the audio waveform overlay."
      },
      {
        "id": "waveformOpacity",
        "type": "Number",
        "name": "Waveform opacity",
        "description": "Opacity for the waveform overlay (0-1)."
      },
      {
        "id": "kenBurnsZoomIncrement",
        "type": "Number",
        "name": "Ken Burns zoom increment",
        "description": "Per-frame zoom increment for the Ken Burns effect."
      },
      {
        "id": "kenBurnsMaxZoom",
        "type": "Number",
        "name": "Ken Burns max zoom",
        "description": "Maximum zoom level for the Ken Burns effect."
      },
      {
        "id": "kenBurnsEnabled",
        "type": "Boolean",
        "name": "Enable Ken Burns effect",
        "description": "Toggle the Ken Burns zoom effect for video rendering."
      }
    ]
  },
  "functions": [
    {
      "id": "generateAudio",
      "name": "Generate audio",
      "description": "Generate an MP3 voiceover from entry text and upload it as a Contentful Asset.",
      "path": "functions/generate-audio.js",
      "entryFile": "functions/generate-audio.ts",
      "allowNetworks": [
        "https://api.contentful.com",
        "https://api.elevenlabs.io",
        "https://github.com",
        "https://raw.githubusercontent.com"
      ],
      "accepts": ["appaction.call"]
    },
    {
      "id": "getUsageMetricsFn",
      "name": "Get usage metrics",
      "description": "Fetch ElevenLabs subscription usage metrics for the dashboard.",
      "path": "functions/get-usage-metrics.js",
      "entryFile": "functions/get-usage-metrics.ts",
      "allowNetworks": ["https://api.elevenlabs.io"],
      "accepts": ["appaction.call"]
    }
  ],
  "actions": [
    {
      "id": "generateAudio",
      "name": "Generate Audio",
      "type": "function-invocation",
      "functionId": "generateAudio",
      "category": "Custom",
      "parametersSchema": {
        "type": "object",
        "properties": {
          "entryId": {
            "type": "string"
          },
          "fieldId": {
            "type": "string"
          },
          "targetLocale": {
            "type": "string",
            "pattern": "^[a-z]{2}-[A-Z]{2}$"
          },
          "voiceId": {
            "type": "string"
          }
        },
        "required": ["entryId", "fieldId", "targetLocale"],
        "additionalProperties": false
      },
      "resultSchema": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "data": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string"
              },
              "assetId": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "locale": {
                "type": "string"
              }
            },
            "required": ["status", "assetId", "url", "locale"],
            "additionalProperties": false
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                }
              },
              "required": ["message", "type"],
              "additionalProperties": false
            }
          }
        },
        "required": ["ok"],
        "additionalProperties": false
      }
    },
    {
      "id": "getUsageMetrics",
      "name": "Get Usage Metrics",
      "type": "function-invocation",
      "functionId": "getUsageMetricsFn",
      "category": "Custom",
      "parametersSchema": {
        "type": "object",
        "properties": {},
        "additionalProperties": false
      },
      "resultSchema": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "data": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string"
              },
              "code": {
                "type": "string"
              },
              "character_count": {
                "type": "number"
              },
              "character_limit": {
                "type": "number"
              },
              "tier": {
                "type": "string"
              },
              "next_character_count_reset_unix": {
                "type": "number"
              }
            },
            "required": ["status"],
            "additionalProperties": false
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                }
              },
              "required": ["message", "type"],
              "additionalProperties": false
            }
          }
        },
        "required": ["ok"],
        "additionalProperties": false
      }
    }
  ]
}
