    "@types/chai": "^4.3.5",
    "@types/lodash.difference": "^4.5.9",
    "@types/lodash.get": "^4.4.9",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.16",
    "@types/sinon-chai": "^3.2.12",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "sinon": "^17.0.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
