{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"

    },
    "parser": "@typescript-eslint/parser",

    "plugins": ["@typescript-eslint"],
    "rules": {
      "semi": ["error", "always"],
      "strict": ["error", "global"],
      "quotes": ["error", "single"]
    }
  }
  