{
  "name": "smartling-lambda",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "LOCAL_DEV=true ts-node src/index.ts",
    "clean": "rimraf built static",
    "build-lambda": "npm run clean && tsc",
    "build-frontend": "cd ../frontend && npm run build",
    "copy-static": "cp -R node_modules/smartling-frontend/build static",
    "build": "npm run clean && npm run build-lambda && npm run build-frontend",
    "lint": "tslint --project ./tsconfig.json",
    "lint-fix": "tslint --project ./tsconfig.json --fix",
    "pretty": "prettier --config ./.prettierrc --write '{src/*.ts,src/*.spec.ts}'",
    "test": "LOCAL_DEV=true jest **/*.spec.ts",
    "test:ci": "npm run build-frontend && npm run test",
    "test-dev": "LOCAL_DEV=true jest **/*.spec.ts --watch",
    "deploy": "npm run build && npm run copy-static && sls deploy --stage prd"
  },
  "dependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.1",
    "node-fetch": "^2.6.0",
    "openid-client": "^3.11.0",
    "rimraf": "^3.0.1",
    "serverless": "^1.61.3",
    "serverless-express": "^2.0.11",
    "typescript": "^3.7.5",
    "smartling-frontend": "^1.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.36",
    "@types/node": "^12.12.25",
    "@types/node-fetch": "^2.5.4",
    "@types/request": "^2.48.3",
    "jest": "^25.1.0",
    "nock": "^11.7.0",
    "prettier": "^1.19.1",
    "serverless-domain-manager": "^3.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-no-unused-expression-chai": "^0.1.4"
  }
}
