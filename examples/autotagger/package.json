{
  "name": "autotagger",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@contentful/app-sdk": "^4.29.0",
    "@contentful/f36-components": "4.67.3",
    "@contentful/f36-tokens": "4.0.5",
    "@contentful/react-apps-toolkit": "1.2.16",
    "@emotion/css": "^11.13.0",
    "contentful-management": "10.46.4",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "scripts": {
    "start": "vite",
    "build": "npm run build:frontend && npm run build:functions",
    "build:frontend": "rm -rf build && tsc && vite build",
    "build:functions": "node build-functions.js",
    "test": "vitest run --passWithNoTests",
    "create-app-definition": "contentful-app-scripts create-app-definition",
    "upload": "contentful-app-scripts upload --bundle-dir ./build",
    "upload-ci": "contentful-app-scripts upload --ci --bundle-dir ./build --organization-id $CONTENTFUL_ORG_ID --definition-id $CONTENTFUL_APP_DEF_ID --token $CONTENTFUL_ACCESS_TOKEN"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@contentful/app-scripts": "1.25.0",
    "@contentful/node-apps-toolkit": "^3.4.1",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@tsconfig/recommended": "1.0.3",
    "@types/node": "^22.2.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "esbuild": "0.19.2",
    "happy-dom": "^14.12.3",
    "typescript": "4.9.5",
    "vite": "^5.4.0",
    "vitest": "^2.0.5"
  },
  "homepage": "."
}
